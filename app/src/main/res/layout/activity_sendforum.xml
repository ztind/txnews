<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#e9e1e1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#66deb4"
        >
        <ImageView
            android:onClick="onCloseClick"
            android:layout_width="20dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_back_u"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发帖中心"
            android:id="@+id/textView2"
            android:layout_centerInParent="true"
            android:textColor="#333232"
            android:textSize="18sp"
            />
    </RelativeLayout>
    <EditText
        android:background="#ffffff"
        android:layout_marginTop="5dp"
        android:id="@+id/ft_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"
        android:gravity="center"
        android:hint="标题"
        />

    <EditText
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:id="@+id/ft_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="说点什么吧..."
        android:lines="8"
        android:gravity="left"
        android:padding="5dp"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:id="@+id/ft_iamge"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/add_image"
        android:layout_marginLeft="5dp"
        />
    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/mycenter_send_but"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发表"
        android:onClick="sendinvitationClick"
        android:background="@drawable/sendidea_select"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="#f0743f"
        />
</LinearLayout>